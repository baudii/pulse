<?xml version="1.0" encoding="utf-8" ?>
<nlog autoReload="true" keepVariablesOnReload="true" xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<variable name="loggerFileName" value="C:\Logs\MediaForge\${date:format=yyyy_MM_dd}_MediaForge.log"/>

	<targets>
		<target name="logfile" xsi:type="File" fileName="${loggerFileName}" layout="${date:format=yyyy-MM-dd HH\:mm\:ss.fff} | ${level:uppercase=true:padding=-5} | ${message} | ${logger}${when:when='${mdlc:item=TraceId}' != '':inner=/${mdlc:item=TraceId}}${onexception:inner=${newline}Exception\: ${exception:format=Type}\: ${exception:format=Message}${newline}${exception:format=StackTrace}" encoding="utf-8"/>
		<target name="console" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false">
			<highlight-word text=" TRACE " foregroundColor="DarkGray" />
			<highlight-word text=" WARN " foregroundColor="Yellow" />
			<highlight-word text=" INFO " foregroundColor="Green" />
			<highlight-word text=" ERROR " foregroundColor="Red" />
			<highlight-word text=" FATAL " foregroundColor="DarkRed" />
			<layout>${date:format=HH\:mm\:ss.ff} | ${level:uppercase=true:padding=-5} | ${message}${onexception:inner= Error\: ${exception:format=Message}}</layout>
		</target>
	</targets>

	<rules>
		<logger name="Microsoft.Hosting.Lifetime" minLevel="Info" writeTo="console, logfile" final="true"/>
		<logger name="Microsoft.*" maxLevel="Info" writeTo="ignore" final="true"/>
		<logger name="*" minlevel="Trace" writeTo="console, logfile" />
	</rules>

</nlog>